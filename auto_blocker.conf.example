[DEFAULT]
# 雷池API主机地址
SAFELINE_HOST = localhost

# 雷池API端口
SAFELINE_PORT = 9443

# 加密后的API令牌（由安装脚本自动生成）
SAFELINE_TOKEN_ENCRYPTED = 

# 默认IP组名称（当未指定特定攻击类型的IP组时使用）
DEFAULT_IP_GROUP = 人机验证

# 是否为不同攻击类型使用不同IP组
USE_TYPE_GROUPS = true

# 雷池安全日志文件路径
SAFELINE_LOG_FILE = /var/log/safeline/security.log

# 攻击类型过滤，多个ID用逗号分隔
# 例如: 7,8,9,11,21 表示只监控代码执行、代码注入、命令注入、文件包含和扫描器类型的攻击
ATTACK_TYPES_FILTER = 

# API查询间隔（秒）
QUERY_INTERVAL = 60

# 每次查询的最大日志数量
MAX_LOGS_PER_QUERY = 100

# 是否跟踪日志轮转
FOLLOW_LOG_ROTATION = true

# 是否启用调试模式
DEBUG_MODE = false

[TYPE_GROUP_MAPPING]
# 攻击类型ID到IP组的映射
# 格式: 攻击类型ID = IP组名称
# 高危攻击类型加入黑名单组
0 = 黑名单
5 = 黑名单
7 = 黑名单
8 = 黑名单
9 = 黑名单
11 = 黑名单
29 = 黑名单

# 低危攻击类型加入人机验证组
1 = 人机验证
2 = 人机验证
3 = 人机验证
4 = 人机验证
6 = 人机验证
10 = 人机验证
21 = 人机验证